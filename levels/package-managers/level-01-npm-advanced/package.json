{
  "name": "npm-advanced-demo",
  "version": "1.0.0",
  "description": "npm 高级特性演示项目",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run clean && npm run build:lib && npm run build:types",
    "build:lib": "rollup -c",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --ext .js,.ts --fix",
    "format": "prettier --write \"src/**/*.{js,ts,json,md}\"",
    "validate": "npm run lint && npm run test && npm run build",
    "security-check": "npm audit && npm run check-updates",
    "check-updates": "ncu -u",
    "release": "npm run validate && npm run version-bump && npm publish",
    "version-bump": "npm version patch",
    "prepublishOnly": "npm run validate",
    "postinstall": "node scripts/postinstall.js",
    "precommit": "lint-staged",
    "prepare": "husky install"
  },
  "keywords": [
    "npm",
    "package-manager",
    "javascript",
    "typescript"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/npm-advanced-demo.git"
  },
  "bugs": {
    "url": "https://github.com/username/npm-advanced-demo/issues"
  },
  "homepage": "https://github.com/username/npm-advanced-demo#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^13.0.0",
    "npm-check-updates": "^16.0.0",
    "prettier": "^2.0.0",
    "rimraf": "^4.0.0",
    "rollup": "^3.0.0",
    "typescript": "^4.9.0",
    "vite": "^4.0.0"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/**/*.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}